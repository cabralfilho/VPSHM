#!/bin/bash

echo "VPSHM - Virtual Private Server Host Manager Installer"
echo ""

#create scripts folder if it doesn't exist
if [ ! -d "/VPSHM-scripts" ]
then
    echo "VPSHM-scripts folder doesn't exist. Creating now..."; RES="$(mkdir -p -- '/VPSHM-scripts')"; echo "${RES}"
else
    echo "VPSHM-scripts folder exists"
fi

echo "Update the system and install necessary packages"; UPDATE_1="$(yum install curl)"; echo "${UPDATE_1}"

